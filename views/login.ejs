<%- include("header"); -%>

<h2 style="text-align:center;padding:30px 0">Login</h2>
<form action="/login" method="post">
  <div class="form-group">
    <h5 style="color:red"> <%= msg %> </h5>
    <label for="exampleInputEmail1">Enter Mobile Number</label>
    <!-- id="exampleInputEmail1" -->
    <input type="tel" class="form-control" aria-describedby="emailHelp" name="lognum" required>
    <small id="emailHelp" class="form-text text-muted">We'll never share your details with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Enter Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="logpass" required>
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>
<%- include("footer"); -%>
